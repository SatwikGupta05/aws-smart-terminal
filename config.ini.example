# AWS Smart Terminal Configuration Template
# Copy this file to 'config.ini' and configure your settings
# This template is safe to commit to Git

[AUTH]
# Current authentication mode
# Options: demo, iam, root
mode = demo

# AWS profile names (only used when mode = iam or root)
# These profiles should be configured in ~/.aws/credentials using 'aws configure --profile <name>'
iam_profile = iam-user
root_profile = root-account

[GEMINI]
# Google Gemini API Key
# Get your key from: https://makersuite.google.com/app/apikey
# Required for ALL modes (demo, iam, root)
api_key = your_gemini_api_key_here

[AWS]
# Default AWS region (used for all modes)
# Examples: us-east-1, us-west-2, eu-west-1, ap-southeast-1
default_region = us-east-1

[TERMINAL]
# Terminal settings
history_file = .terminal_history
max_history_entries = 1000
